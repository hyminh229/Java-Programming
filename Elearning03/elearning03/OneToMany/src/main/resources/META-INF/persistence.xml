<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="elearning03" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.fe.pojo.Student</class>
        <properties>
            <!-- Driver cho SQL Server -->
            <property name="jakarta.persistence.jdbc.driver"
                    value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <!-- URL kết nối tới SQL Server -->
            <property name="jakarta.persistence.jdbc.url"
                    value="jdbc:sqlserver://elearning:1433;databaseName=elearning03;encrypt=false;trustServerCertificate=true"/>

            <!-- Tài khoản SQL Server -->
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="Aesx5099"/>

            <!-- Cấu hình Hibernate cho SQL Server -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>